<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <resource-bundle>
            <base-name>lang/Messages</base-name>
            <var>msg</var>
        </resource-bundle>
        <locale-config>
            <default-locale>fr</default-locale>
            <supported-locale>fr</supported-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
    </application>
    
    <navigation-rule>
        <from-view-id>/pages/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>peopleDetails</from-outcome>
            <to-view-id>/pages/people/details.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>createPeople</from-outcome>
            <to-view-id>/pages/people/create.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>moviesDetails</from-outcome>
            <to-view-id>/pages/movies/details.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>createMovie</from-outcome>
            <to-view-id>/pages/movies/create.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/pages/people/details.xhtml</from-view-id>      
        <navigation-case>
            <from-outcome>editPeople</from-outcome>
            <to-view-id>/pages/people/edit.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>returnHome</from-outcome>
            <to-view-id>/pages/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/pages/people/create.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>returnHome</from-outcome>
            <to-view-id>/pages/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/pages/people/edit.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>returnHome</from-outcome>
            <to-view-id>/pages/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/pages/movies/details.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>returnHome</from-outcome>
            <to-view-id>/pages/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
